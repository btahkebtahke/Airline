@model Airlines.WebUI.Models.AdminViewModel

    <div class="table-wrap">
        <p class="text-center">
            @Html.ActionLink("Add a new stuardess", "Create", "Stuardesses", "", "")
        </p>
        <table class="table">
            <tr>
                <th>
                    Team
                </th>
                <th>
                    Form
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Stuardesses)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Team.ID)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Form)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Stuardesses", new { id = item.ID }, "")|
                        @Html.ActionLink("Delete", "Delete", "Stuardesses", new { id = item.ID }, "")
                    </td>
                </tr>
            }

        </table>
        </div>