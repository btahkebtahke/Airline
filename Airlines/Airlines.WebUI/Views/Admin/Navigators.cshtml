@model Airlines.WebUI.Models.AdminViewModel

<p class="text-center">
    @Html.ActionLink("Add a new navigator", "Create", "Navigators" ,"","")
</p>
<table class="table">
    <tr>
        <th>
            FirstName
        </th>
        <th>
            LastName
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Navigators)
    {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Navigators" ,new { id = item.ID }, "") |
                @Html.ActionLink("Delete", "Delete", "Navigators" ,new { id = item.ID }, "")
            </td>
        </tr>
    }

</table>
