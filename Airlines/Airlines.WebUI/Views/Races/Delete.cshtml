@model Airlines.Data.Entities.Race

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this race?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Raceteam
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RaceTeam.ID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Departure)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departure)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Destinaton)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Destinaton)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            Status
        </dt>

        @if (Model.IsDeparted == true)
        {
            <dd class="align-middle">
                In flight
            </dd>
        }
        else
        {
            <dd class="align-middle">
                Incoming race
            </dd>
        }
    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }
</div>
